<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CL Movie Reviews</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <img src="" alt="">
    <div class="container my-4">
      <h1 style="text-align: center;">CL Movie Reviews</h1>
      <form action="/submit-review" method="POST" class="border-bottom">
        <div class="row">
          <div class="col-12 col-md mb-3">
            <label for="movieTitle" class="form-label">Movie Title</label>
            <input
              type="text"
              name="movieTitle"
              id="movieTitle"
              required
              class="form-control"
            />
          </div>
          <div class="col-12 col-md mb-3">
            <label for="genre" class="form-label">Genre</label>
            <select class="form-select" name="genre" id="genre">
              <% genres.forEach(function(genre) { %>
              <option value="<%= genre %>"><%= genre %></option>
              <% }); %>
            </select>
          </div>
          <div class="col-12 col-md mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input
              type="number"
              name="rating"
              id="rating"
              min="0"
              max="10"
              step="0.1"
              required
              class="form-control"
            />
          </div>
          <br />
          <div class="mb-3">
            <label class="form-label" for="review">Review</label>
            <textarea
              rows="6"
              name="review"
              id="review"
              required
              class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-primary mb-3">Submit Review</button>
        </div>
      </form>
      <div class="row g-3 mt-3">
        <% console.log(reviews) %>
        <% reviews.forEach(function(review) { %>
          <% if (review) { %>

          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <div><%= review.movieTitle %></div>
                <div class="badge rounded-pill bg-secondary"><%= review.genre %></div>
              </div>
              <div class="card-body">
                <p><%= review.review %></p>
                <div style="color: black;" class="badge rounded-pill bg-warning"><%= review.rating %></div>
              </div>
            </div>
          </div>
          <% } %>
        <% }) %>
      </div>
    </div>
  </body>
</html>
